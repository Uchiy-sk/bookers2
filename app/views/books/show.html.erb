<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td><%= image_tag 'sample-author1.jpg' %></td>
        <td><%= @book.user.name %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>