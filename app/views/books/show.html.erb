<%= render 'users/info', user: @user %>

<%= render 'new', book: Book.new %>

<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td><%= link_to image_tag(@book.user.get_profile_image(100, 100)), user_path(@book.user.id) %></td>
        <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>