<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'new', book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- Book detail フォーム -->
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag(@book.user.get_profile_image(100, 100)) %></br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
              <td>コメント数：<%= @book.book_comments.count %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table>
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
                <%= image_tag book_comment.user.get_profile_image(100,100) %></br>
                <%= book_comment.user.name %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment) ,method: :delete, class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <!-- comment form -->
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5' %></br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>