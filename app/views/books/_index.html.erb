<%= link_to '新しい順', books_path(latest: "true") %> |
<%= link_to '評価の高い順', books_path(star_count: "true") %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user.id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td>
        <% if book.category.present? %>
          <%= link_to book.category, tagsearch_path(tag: book.category)%>
        <% end %>
      </td>
      <% if book.favorited_by?(current_user) %>
        <td>
          <%= link_to book_favorites_path(book), method: :delete do %>
            <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
          <% end %>
        </td>
        <% else %>
        <td>
          <%= link_to book_favorites_path(book), method: :post do %>
            <i class="fa-regular fa-heart"></i><%= book.favorites.count %>
          <% end %>
        </td>
      <% end %>
      <td><%= render "static_rate", book: book %></td>
      <td><%= "コメント数：#{book.book_comments.count}" %><td>
    </tr>
  <% end %>
  </tbody>
</table>