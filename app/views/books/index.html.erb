<!-- User info フォーム-->
<h2>User info</h2>
<%= image_tag 'sample-author1.jpg' %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th></th>
    </tr>
  </tbody>
</table>

<!-- New book フォーム -->
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>body</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>


<!-- Books フォーム -->
<div>
  <h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag 'sample-author1.jpg' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>