<div>
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> erros prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<!-- 編集フォーム -->
<h1>Editing book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>body</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>

    <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
  <% end %>