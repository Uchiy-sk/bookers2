<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div>
    <label for="Name">Name</label></br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
    <label for="inputImage">Image</label></br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div>
    <label for="introduction">introduction</label></br>
    <%= f.text_area :introduction, autofocus: true, id:"introduction", placeholder:"自己紹介文" %>
  </div>
  <div><%= f.submit "Update User" %></div>
<% end %>